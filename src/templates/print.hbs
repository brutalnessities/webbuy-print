<mjml>
  <mj-head>
    <mj-font name="'Open Sans', Roboto, 'San Francisco', Helvetica, Arial, sans-serif">
    </mj-font>

    <mj-style inline="inline">
      .disclaimers p {
      margin: 0 0 5px;
      font-size: 10px;
      }
    </mj-style>

    <mj-style>

    </mj-style>

    <mj-attributes>
      <mj-all padding="0" />
      <mj-text font-size="14px" />
      <mj-table font-size="14px" />
      <mj-wrapper padding="24px 0" />
      <mj-image />
      <mj-section padding="0" />

      <mj-class name="groupHeader" padding="6px 0" />
      <mj-class name="groupBody" padding="0 0 12px" />
			<mj-class name="itemTitle" />
      <mj-class name="itemPrice" align="right"/>
      
      <mj-class name="h2" font-size="24px" font-weight="bold" />
      <mj-class name="h3" font-size="18px" font-weight="bold" padding-bottom="6px" />
      <mj-class name="h4" font-size="12px" font-weight="bold" padding-bottom="6px" />

      <mj-class name="pb-0" padding-bottom="0" />
      <mj-class name="pb-1" padding-bottom="6px" />
      <mj-class name="pb-2" padding-bottom="12px" />
      <mj-class name="pb-3" padding-bottom="18px" />
      <mj-class name="pb-4" padding-bottom="24px" />

      <mj-class name="pt-0" padding-top="0" />
      <mj-class name="pt-1" padding-top="6px" />
      <mj-class name="pt-2" padding-top="12px" />
      <mj-class name="pt-3" padding-top="18px" />
      <mj-class name="pt-4" padding-top="24px" />

      <mj-class name="pl-0" padding-left="0" />
      <mj-class name="pl-1" padding-left="6px" />
      <mj-class name="pl-2" padding-left="12px" />
      <mj-class name="pl-3" padding-left="18px" />
      <mj-class name="pl-4" padding-left="24px" />

      <mj-class name="tt" font-weight="bold" />
    </mj-attributes>
  </mj-head>

  <mj-body>
    <mj-wrapper padding="50px 0">

      <!-- ðŸ”¸the VOI/itemðŸ”¸ -->
      <mj-section mj-class="border-bottom pb-2">
        <mj-column>
          <mj-image src="https://cdn-v2.webbuy.dev/prod/b50af1e3-f2b7-11ea-b354-06a83b091c7a/inventory/3FMTK3SU4SMA02841_2025-4-8_22:8:33.jpg"></mj-image>
        </mj-column>

        <mj-column mj-class="pl-4">
          <mj-text mj-class="h2">Your {{item.ymm}}</mj-text>
          <mj-table>
            {{{item.details}}}
          </mj-table>
        </mj-column>
      </mj-section>

      <!-- ðŸ”¸Deal PricingðŸ”¸ -->
      <mj-section>
        <mj-column>
          <mj-text mj-class="h3 pt-4">Deal Pricing</mj-text>
          <mj-table>
            {{{pricing.summary}}}
          </mj-table>
        </mj-column>
      </mj-section>

      <!-- ðŸ”¸AccessoriesðŸ”¸âœ… -->
      <mj-section mj-class="groupHeader">
        <mj-column>
          <mj-text mj-class="h3">Accessories</mj-text>
        </mj-column>
      </mj-section>
      {{#each accessories}}
        <mj-section mj-class="groupBody">
          <mj-group>
            <mj-column mj-class="itemTitle">
              <mj-text>{{this.title}}</mj-text>
            </mj-column>
            <mj-column>
              <mj-text mj-class="itemPrice">{{this.price}}</mj-text>
            </mj-column>
          </mj-group>
        </mj-section>
      {{/each}}

      <!-- ðŸ”¸ProtectionðŸ”¸âœ… -->
      <mj-section mj-class="groupHeader">
        <mj-column>
          <mj-text mj-class="h3">Protection</mj-text>
        </mj-column>
      </mj-section>
      {{#each protections}}
        <mj-section mj-class="groupBody">
          <mj-group>
            <mj-column mj-class="itemTitle">
              <mj-text>{{this.title}}</mj-text>
            </mj-column>
            <mj-column>
              <mj-text mj-class="itemPrice">{{this.price}}</mj-text>
            </mj-column>
          </mj-group>
        </mj-section>
      {{/each}}

      <!-- ðŸ”¸Taxes & FeesðŸ”¸âœ… -->
      <mj-section mj-class="groupHeader">
        <mj-column>
          <mj-text mj-class="h3">Taxes &amp; Fees</mj-text>
        </mj-column>
      </mj-section>
      {{#each taxesAndFees}}
        <mj-section mj-class="groupBody">
          <mj-group>
            <mj-column mj-class="itemTitle">
              <mj-text>{{this.title}}</mj-text>
            </mj-column>
            <mj-column>
              <mj-text mj-class="itemPrice">{{this.price}}</mj-text>
            </mj-column>
          </mj-group>
        </mj-section>
      {{/each}}

      <!-- ðŸ”¸Trade-inðŸ”¸ -->
      <mj-section>
        <mj-column>

          <!-- ðŸ”»trade-in detailsðŸ”» -->
          <mj-text mj-class="h3">Your Trade-In</mj-text>
          <mj-table mj-class="pb-1">
            {{{trade.details}}}
          </mj-table>
          <mj-divider border-color="lightgray" border-width="1px" mj-class="pb-2"></mj-divider>

          <!-- ðŸ”»trade-in valuationðŸ”» -->
          <mj-text mj-class="h3">Trade-In</mj-text>
          <mj-table mj-class="pl-2">
            {{{trade.valuation}}}
          </mj-table>

          <!-- ðŸ”»reconditioning costsðŸ”» -->
          <mj-text mj-class="pl-2 pt-1" font-size="14px">Reconditioning Costs</mj-text>
          <mj-table mj-class="pl-4">
            {{{trade.adjustments}}}
          </mj-table>

          <!-- ðŸ”»reconditioning feesðŸ”» -->
          <mj-text mj-class="pl-2 pt-1" font-size="14px">Reconditioning Fees</mj-text>
          <mj-table mj-class="pl-4">
            {{{trade.fees}}}
          </mj-table>
        </mj-column>
      </mj-section>

      <!-- ðŸ”¸IncentivesðŸ”¸âœ… -->
      <mj-section mj-class="groupHeader">
        <mj-column>
          <mj-text mj-class="h3">Incentives</mj-text>
        </mj-column>
      </mj-section>
      {{#each incentives}}
        <mj-section mj-class="groupBody">
          <mj-group>
            <mj-column mj-class="itemTitle">
              <mj-text>{{this.title}}</mj-text>
            </mj-column>
            <mj-column>
              <mj-text mj-class="itemPrice">{{this.price}}</mj-text>
            </mj-column>
          </mj-group>
        </mj-section>
      {{/each}}

      <!--ðŸ”¸Pricing SummaryðŸ”¸ -->
      <mj-section mj-class="border-bottom pb-2">
        <mj-column>
          <mj-table>
            {{{pricing.summary}}}
            <tr>
              <td>
              </td>
              <td></td>
            </tr>
          </mj-table>

          <!-- ðŸ”»estimate v. actualðŸ”» -->
          <mj-table mj-class="pt-2">
            <tr>
              <td style="font-size: 18px; font-weight: bold;">
                <span style="color: #2e616f; border-right: 2px solid #80808080; padding-right: 6px">Estimated</span>
                <span style="color:#808080; font-weight: normal">Actual</span>
                <p style="margin: 0; line-height: 14px; font-size: 14px;">{{pricing.termRate}}</p>
                <p style="margin: 0 0 6px; line-height: 16px; font-size: 14px;">{{pricing.termLength}}</p>
              </td>
              <td align="right"><span style="font-size: 26px; color:#2e616f; font-weight: bolder;">{{pricing.monthlyPayment}}</span>/mo.</td>
            </tr>
          </mj-table>

          <mj-table>
            {{{pricing.dueAtSigning}}}
          </mj-table>

          <mj-table mj-class="pl-2">
            {{{pricing.dueBreakdown}}}
          </mj-table>
        </mj-column>
      </mj-section>

      <!-- ðŸ”¸disclaimersðŸ”¸ -->
      <mj-section mj-class="pt-4" css-class="disclaimers">
        <mj-column>
          <mj-text>
            {{{disclaimers.trade}}}
            {{{disclaimers.protection}}}
            {{{disclaimers.incentive}}}
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>
  </mj-body>
</mjml>