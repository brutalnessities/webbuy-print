{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "./dist", // if out path for a file is same as its src path, nothing will be emitted
    "resolveJsonModule": true
  }
}