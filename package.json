{
  "name": "webbuy-print",
  "version": "1.0.0",
  "main": "dist/bundle.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src/templates"
  ],
  "exports": {
    ".": {
      "import": "./dist/bundle.js",
      "types": "./dist/index.d.ts"
    }
  },
  "license": "MIT",
  "dependencies": {
    "handlebars": "^4.7.8",
    "lit": "^3.3.2",
    "mjml": "^4.15.3"
  },
  "devDependencies": {
    "@types/mjml": "^4.7.4",
    "@types/node": "^25.0.3",
    "copyfiles": "^2.4.1",
    "raw-loader": "^4.0.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.1.6",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "scripts": {
    "render": "node dist/index.js",
    "build:templates": "node dist/scripts/build-templates.js",
    "copy:templates": "copyfiles -u 1 \"src/templates/**/*\" dist/src/",
    "build": "tsc && yarn build:templates && yarn copy:templates && npx webpack"
  }
